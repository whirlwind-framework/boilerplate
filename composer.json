{
    "name": "whirlwind-framework/boilerplate",
    "description": "Whirlwind DDD micro framework boilerplate",
    "keywords": [
        "framework",
        "ddd",
        "micro framework"
    ],
    "authors": [
        {
            "name": "Alexander Stepanenko",
            "email": "alex.stepanenko@gmail.com"
        }
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "require": {
        "ext-json": "*",
        "whirlwind-framework/framework": "*",
        "whirlwind-framework/middleware-uuid": "dev-main",
        "vlucas/phpdotenv": "^5.4",
        "spiral/roadrunner": "v2.2.0",
        "whirlwind-framework/middleware-exception-logger": "dev-main",
        "whirlwind-framework/adapter-router-league": "dev-main"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.2",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App",
            "Domain\\": "src/Domain",
            "Infrastructure\\": "src/Infrastructure"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    }
}
